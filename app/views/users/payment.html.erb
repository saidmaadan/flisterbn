<div class="container">
  <div class="row">
    <div class="col-md-3">
      <ul class="sidebar-list">
        <li class="sidebar-item"><%= link_to "Payment Method", payment_method_path, class: "sidebar-link active" %></li>
        <li class="sidebar-item"><%= link_to "Payout Method", payment_method_path, class: "sidebar-link" %></li>
        <li class="sidebar-item"><%= link_to "Notification Settings", payment_method_path, class: "sidebar-link" %></li>
      </ul>
    </div>

    <div class="col-md-9">
      <div class="card">
        <div class="card-header">Payment Method</div>
        <div class="card-body">
          <div class="container">
            <div class="c_card" style="margin-bottom: 2px"></div>
              <%= form_tag("/add_card", method: "post", id: "add-card") do %>
                <div class="row pull-center">
                  <div class="col-md-12">
                    <div class="card card-body">

                      <div class="row">
                        <div class="col-md-8 form-group">
                          <label >Card Number</label>
                          <input type="text" name="number" class="form-control">
                        </div>
                        <div class="col-md-4 form-group">
                          <label>Expiration</label>
                          <input type="text" placeholder="MM/YY" name="expiry" class="form-control">
                        </div>
                      </div>

                      <div class="row">
                        <div class="col-md-8 form-group">
                          <label >Name</label>
                          <input type="text" name="name" class="form-control">
                        </div>
                        <div class="col-md-4 form-group">
                          <label>CVV</label>
                          <input type="text" name="cvv" class="form-control">
                        </div>
                      </div>

                      <div class="row">
                        <div class="col-md-12 text-center">
                          <% if current_user.stripe_id %>
                            <button type="submit" class="btn btn-normal btn-block">Update Card</button>
                          <% else %>
                            <button type="submit" class="btn btn-normal btn-block">Add Card</button>
                          <% end %>
                        </div>
                      </div>

                    </div>
                  </div>
                </div>
              <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<script>
  $(function(){
    var c_card = new Card({
      form: "#add-card",
      container: '.c_card'
    })
  });
</script>
