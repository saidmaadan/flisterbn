<div class="container">
  <div class="row">
    <div class="col-md-3">
      <%= render 'listing_nav' %>
    </div>
    <div class="col-md-9">
      <div class="card">
        <div class="card-header">
          Pricing
        </div>
        <div class="card-body">
          <div class="container">
            <%= form_for @listing do |f| %>
              <div class="row">
                <div class="col-md-12 form-group input-text">
                  <label>Price</label>
                  <%= f.text_field :price, placeholder: "$200", class: "form-control", required: true %>
                </div>
              </div>
              <div class="text-center">
                <%= f.submit "Save", class: "btn btn-form" %>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
