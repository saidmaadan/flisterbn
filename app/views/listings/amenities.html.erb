<div class="container">
  <div class="row">
    <div class="col-md-3">
      <%= render 'listing_nav' %>
    </div>
    <div class="col-md-9">
      <div class="card">
        <div class="card-header">
          Amenities
        </div>
        <div class="card-body">
          <div class="container">
            <%= form_for @listing do |f| %>
              <div class="row form-group">
                <div class="col-md-4">
                  <%= f.check_box :tv %> TV
                </div>
                <div class="col-md-4">
                  <%= f.check_box :kitchen %> Kitchen
                </div>
                <div class="col-md-4">
                  <%= f.check_box :internet %> Internet
                </div>
              </div>
              <div class="row form-group">
                <div class="col-md-4">
                  <%= f.check_box :heating %> Heating
                </div>
                <div class="col-md-4">
                  <%= f.check_box :kitchen %> Kitchen
                </div>
                <div class="col-md-4">
                  <%= f.check_box :air %> Air Conditioning
                </div>
              </div>
              <div class="text-center">
                <%= f.submit "Save", class: "btn btn-form" %>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
