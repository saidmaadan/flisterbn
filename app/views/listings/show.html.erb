<!-- Image -->
<div class="row">
  <div class="col-md-12">
    <%= image_tag @listing.backgroud_image(nil), class: "show_image" %>
  </div>
</div>
<br/>
<div class="container">
  <div class="row">
    <div class="col-md-8">
      <h1><%= @listing.listing_name %></h1>
      <%= @listing.address %>
    </div>
    <div class="col-md-4 text-center">
      <%= image_tag avatar_url(@listing.user), class: "img-circle avatar-large" %><br/><br/>
      <%= @listing.user.full_name %>
    </div>
  </div>
  <hr/>

      <!-- Room Info -->
  <div class="row text-flister text-center row-space-1">
    <div class="col-md-3 col-sm-6">
      <i class="fa fa-home fa-2x"></i><br>
      <div><%= @listing.listing_type %></div>
    </div>
    <div class="col-md-3 col-sm-6">
      <i class="fa fa-user-circle-o fa-2x"></i><br>
      <div><%= pluralize(@listing.accommodate, "Guest") %></div>
    </div>
    <div class="col-md-3 col-sm-6">
      <i class="fa fa-bed fa-2x"></i><br>
      <div><%= pluralize(@listing.bedroom, "Bedroom") %></div>
    </div>
    <div class="col-md-3 col-sm-6">
      <i class="fa fa-bath fa-2x"></i><br>
        <div><%= pluralize(@listing.bathroom, "Bathroom") %></div>
    </div>
  </div>
  <hr/>

      <!-- About -->
      <div class="row">
        <div class="col-md-12">
          <h3>About This Listing</h3>
          <p><%= @listing.summary %></p>
        </div>
      </div>
      <hr/>

      <!-- Amenities -->
  <div class="row">
    <div class="col-md-3">
      <h4>Amenities</h4>
    </div>

    <div class="col-md-9">
      <div class="row">
        <div class="col-md-6">
          <ul class="amenities">
            <li class="<%= 'text-line-through' if !@listing.tv %>">TV</li>
            <li class="<%= 'text-line-through' if !@listing.kitchen %>">Kitchen</li>
            <li class="<%= 'text-line-through' if !@listing.internet %>">Internet</li>
          </ul>
        </div>
        <div class="col-md-6">
          <ul class="amenities">
            <li class="<%= 'text-line-through' if !@listing.heating %>">Heating</li>
            <li class="<%= 'text-line-through' if !@listing.air %>">Air Conditioning</li>
          </ul>
        </div>
      </div>
    </div>
  </div>
  <hr/>

  <div class="row">
    <% if @photos.length > 0 %>
      <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
        <ol class="carousel-indicators">
          <% @photos.each do |photo| %>
            <li data-target="#myCarousel" data-slide-to="<%= photo.id %>"></li>
          <% end %>
        </ol>
        <div class="carousel-inner">
          <% @photos.each do |photo| %>
            <div class="carousel-item <%= 'active' if photo.id == @photos[0].id %>">
              <%= image_tag photo.image.url(), width: "100%", height: "500px" %>
            </div>
          <% end %>
        </div>
        <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
          <span class="sr-only">Next</span>
        </a>
      </div>
    <% end %>
  </div>
  <hr/>

  <!-- GOOGLE MAP -->
  <div class="row">
    <div id="map"></div>
    <script src="https://maps.googleapis.com/maps/api/js"></script>
    <script>
      function initialize() {
        var location = {lat: <%= @listing.latitude %>, lng: <%= @listing.longitude %>};
        var map = new google.maps.Map(document.getElementById('map'), {
          center: location,
          zoom: 14
        });

        var marker = new google.maps.Marker({
          position: location,
          map: map
        });

        var infoWindow = new google.maps.InfoWindow({
          content: '<div id="content"><%= image_tag @listing.backgroud_image(:medium) %></div>'
        });

        infoWindow.open(map, marker);
      }
      // $(document).on("turbolinks:load", function(){
      //   initialize(<%= raw @listings.to_json %>)
      //   })

      google.maps.event.addDomListener(window, 'load', initialize);

    </script>
  </div>
  <hr/>
</div>


