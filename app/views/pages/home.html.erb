<div class="container">
  <div class="row">
  <div class="col-md-7 banner">
    <h1><span class="text-red">Flisters</span> Book unique homes and experience a city like a local.</h1>
  </div>
</div>
</div>
<div class="home_page">
  <div class="home_page_left">
    <%= form_tag search_path, method: :get do %>
      <div class="container">
        <div class="row">
          <div class="col-md-6">
            <%= text_field_tag :search, params[:search], placeholder: "Where are you going?", class: "form-control", id: "autolocation" %>
          </div>
          <div class="col-md-3">
            <%= text_field_tag :start_date, params[:start_date], placeholder: "Start Date", class: "form-control datapicker" %>
          </div>
          <div class="col-md-3">
            <%= text_field_tag :end_date, params[:end_date], placeholder: "End Date", class: "form-control datepicker" %>
          </div>
        </div>
        <br>

        <div class="row">
          <div class="offset-md-4 col-md-4 ">
            <%= submit_tag "Search", class: "btn btn-normal btn-block"%>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
<hr>
<div class="container">
  <div class="row">
    <%= render partial: "listings/listings_list", locals: {listings: @listings} %>
  </div>
</div>
<hr>
<div class="container">
  <div><h3>Cities</h3></div>
    <br/>
  <div class="row">

    <div class="col-md-3 col-sm-6">
      <a href="http://localhost:3000/search?utf8=%E2%9C%93&search=los+austin">
        <div class="discovery-card" style="background-image: url('/assets/LA.jpg')"></div>
      </a>
    </div>
    <div class="col-md-3 col-sm-6">
      <a href="http://localhost:3000/search?utf8=%E2%9C%93&search=london">
        <div class="discovery-card" style="background-image: url('/assets/LD.jpg')"></div>
      </a>
    </div>
    <div class="col-md-3 col-sm-6">
      <a href="http://localhost:3000/search?utf8=%E2%9C%93&search=paris">
        <div class="discovery-card" style="background-image: url('/assets/PR.jpg')"></div>
      </a>
    </div>
    <div class="col-md-3 col-sm-6">
      <a href="http://localhost:3000/search?utf8=%E2%9C%93&search=miami">
        <div class="discovery-card" style="background-image: url('/assets/MI.jpg')"></div>
      </a>
    </div>
  </div>
</div>

<script>
  $('#start_date').datepicker({
    dateFormat: 'dd-mm-yy',
    minDate: 0,
    maxDate: '3m',
    onSelect: function(selected) {
      $('#end_date').datepicker("option", "minDate", selected);
      $('#end_date').attr("disabled", false);
    }
  });

  $('#end_date').datepicker({
    dateFormat: 'dd-mm-yy',
    minDate: 0,
    maxDate: '3m',
    onSelect: function(selected) {
      $('#start_date').datepicker("option", "maxDate", selected);
    }
  });

  $(function(){
    $('#autolocation').geocomplete()
  })
</script>
