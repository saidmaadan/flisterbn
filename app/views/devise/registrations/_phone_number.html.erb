<div class="modal fade" id="update-phone" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="myModalLabel">Phone Number</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <%= form_for current_user, url: update_phone_number_user_path(current_user) do |f| %>
            <div class="form-group">
              <%= f.phone_field :phone, class: "form-control", placeholder: "Your Phone Number" %>
            </div>
            <div class="text-center">
              <%= f.submit "Save", class: "btn btn-normal" %>
            </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
