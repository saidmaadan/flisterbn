<div class="container">
  <div class="row register-form">
    <div class="col-md-8 offset-md-2 card card-body ">
      <h2 class="text-center">Sign up</h2>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render 'shared/devisemessage' %>

        <div class="form-row">
          <div class="col form-group">
            <%= f.text_field :first_name, autofocus: true, class: "form-control", placeholder: "First Name" %>
          </div>
          <div class="col form-group">
            <%= f.text_field :last_name, autofocus: true, class: "form-control", placeholder: "Last name" %>
          </div>
        </div>
        <div class="form-row">
          <div class="col form-group">
            <%= f.text_field :username, autofocus: true, class: "form-control", placeholder: "Username" %>
          </div>
        </div>

        <div class="form-row">
          <div class="col form-group">
            <%= f.email_field :email, class: "form-control", placeholder: "Email"%>
          </div>
          <div class="col form-group">
            <%= f.password_field :password, autocomplete: "off", class: "form-control", placeholder: "Password" %>
          </div>
        </div>
        <div class="form-group">
          <%= f.submit "Sign up", class: "btn btn-normal btn-block" %>
        </div>
      <% end %>
      <hr>
      <%= link_to "Sign in with Facebook", user_facebook_omniauth_authorize_path, class: "btn btn-facebook btn-block" %>

    </div>
  </div>
</div>
